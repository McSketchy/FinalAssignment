<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:FinalAssignment.Styles">

    <!-- Pages  Set the background of each page to a color. It can be the same color, but it shouldn’t be the 
            default color-->
    <Style TargetType="Window" >
        <Setter Property="Background" Value="AliceBlue"/>
    </Style>

    <!-- DataGrid  Make the rows alternate in color-->
    <Style TargetType="DataGrid">
        <Setter Property="Background" Value="LightGray" />
        <Setter Property="AlternatingRowBackground" Value="LightGreen"/>
        <Setter Property="AlternationCount" Value="2"/>
    </Style>

